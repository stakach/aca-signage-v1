/* 2d animation common*/
article.crossfade,
article.spin-out, article.spin-in,
article.flyin, article.flyout,
article.slide-out, article.slide-in,
article.push, article.explode,
article.iris {
	-webkit-transition: all 1s ease-in-out;
	-moz-transition: all 1s ease-in-out;
	-ms-transition: all 1s ease-in-out;
	-o-transition: all 1s ease-in-out;
	transition: all 1s ease-in-out;
}




/* Explode styles */


section > article.explode.out {
	opacity: 0;
	
	-webkit-transform: scale(1.5) translate(0,-40px);
	-moz-transform: scale(1.5) translate(0,-40px);
	-ms-transform: scale(1.5) translate(0,-40px);
	-o-transform: scale(1.5) translate(0,-40px);
	transform: scale(1.5) translate(0,-40px);
}


