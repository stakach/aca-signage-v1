	-webkit-border-top-left-radius: 5px;
	border-top-left-radius: 5px;
	
	font-size:75%;
	color: #966F83;
	padding: 0.3em;
	padding-bottom: 0.5em;
	padding-left: 2em;
	padding-right: 2em;
}

#feedback-text span {
	font-size:65%;
	padding-left: 1em;
}

#feedback-text a { 
	color: #966F83 !important;
	text-decoration:none;
	border-bottom:1px dashed #966F83;
}

#feedback-text a:hover { 
	border-bottom:1px solid #966F83;
}


