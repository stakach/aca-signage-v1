/*Accordian Menu ------------------------*/

ul.pagelinks {
	border-top: none;
	margin-bottom: 1.5em;
	
	font-size: 0.85em;
}

ul.pagelinks a {
	text-decoration: none;
}


ul.pagelinks ul li img {
	float: left;
	margin-right: 0.5em;
}


ul.pagelinks ul li span.selection {
	display: block;
	width:auto;
	border: none;
	background-image:none;
	
	margin-top: 0.3em;
	margin-bottom: 0.3em;
	padding: 0.2em;
	padding-bottom: 0.4em;
	padding-left: 4em;
	
	border-top: 1px solid #D9DEE7;
	border-bottom: 1px solid #D9DEE7;
}

/*
	Sub-menus (schedule playlists)
*/

ul.pagelinks ul ul li span.selection {
	padding-left: 5em;
}

/*
	end sub menu
*/

ul.pagelinks ul li span.selected {
	background-image:url(<%= asset_path 'menu-selected.png' %>);
	background-repeat:repeat-x;
	background-position:right top;
	background-color: #8498B9;
	
	border-top: 1px solid #A2B0CC;
	border-bottom: 1px solid #A2B0CC;
	
	vertical-align:middle;
}

ul.pagelinks li ul {
	margin-bottom: 1.5em;
}

ul.pagelinks li span.title {
	font-weight: bold;
	color: gray;
	text-shadow: #FFFFFF 1px 1px 0px;
	padding-left: 2em;
}

ul.pagelinks ul a {
	color: black;
}

ul.pagelinks li ul li a:hover {
	text-decoration: underline;
}



/*
	Only show manipulation objects when selected
*/
ul.pagelinks ul li span.options {
	float: right;
	margin-right: 1em;
}
ul.pagelinks ul li span.options > * {
	float: none;
	display: none;
}
ul.pagelinks ul li span.selected span.options > * {
	display: inline;
}


/*
	Add border when drop-target class applied
*/
ul.pagelinks ul li.drop-target > span.selection {
	background-color: #AEC7E5 !important;
	border: 1px solid #006ADF !important;
	border-radius: 5px !important;
	-moz-border-radius: 5px !important;
	-webkit-border-radius: 5px !important;
}

ul.pagelinks ul li.drop-target > span.selection img {
	margin-left: -1px;
}

#playlist-title.drop-target {
	color:#006ADF !important;
}

ul.pagelinks li ul ul {
	margin-bottom: 0.5em;
}

