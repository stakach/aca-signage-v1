
$('#dialog').html('<%= escape_javascript(render('form'))%>');
$('#dialog').dialog({
	modal: true,
	title: '<%= "#{t(:new)} #{t(:group)}" %>',
	buttons: {
		'<%= t(:create) %>': function() {
			$.ajax({
				type: "POST",
				dataType: 'script',
				url: $('#dialog form').attr('action'),
				data: $('#dialog form').serialize(),
				error: function(xhr, textStatus, errorThrown) {
					error_notice(xhr, '<%= "#{t(:unable_to_create)} #{t(:group)}" %>', errorThrown);
				}
			});
		}
	}
});

