
$('#footer-left').html('<%= escape_javascript(render('converters/preview_left', :converter => @converter))%>');
$preview.html('<%= escape_javascript(image_tag('footer/converters.png', :alt => @converter.description, :title => @converter.description)) %>');
scalePreview();

$('#footer-left .editable').click(function(){
	$.ajax({
		type: "GET", url: '<%= edit_converter_path(@converter.id) %>',
		dataType: "script",
		error: function(xhr, textStatus, errorThrown) {
			error_notice(xhr, '<%= "#{t(:converter)} #{t(:edit_failed)}" %>', errorThrown);
		}
	});
});
