$('#footer-right').html('<%= escape_javascript(render("auth_sources/preview_#{@auth_source.type}_right", :auth_source => @auth_source))%>');
$('#footer-left').html('<%= escape_javascript(render("auth_sources/preview_#{@auth_source.type}_left", :auth_source => @auth_source))%>');
$preview.html('<%= escape_javascript(image_tag('footer/authentication.png', :alt => @auth_source.name, :title => @auth_source.name)) %>');
scalePreview();

$('#footer-data-wrapper .editable').click(function(){
	$.ajax({
		type: "GET", url: '<%= edit_auth_source_path(@auth_source.id) %>',
		dataType: "script",
		error: function(xhr, textStatus, errorThrown) {
			error_notice(xhr, '<%= "#{t(:auth_source)} #{t(:edit_failed)}" %>', errorThrown);
		}
	});
});
