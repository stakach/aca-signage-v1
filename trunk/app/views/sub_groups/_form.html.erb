<%= form_for(@subgroup, {:url => sub_groups_path, :remote => true, :method => :post}) do |f| %>

	<p>
		<%= f.label :description %><%= mark_required(@subgroup, :description) %><br />
		<%= f.text_field :description %>
	</p>
	<p>
		<%= f.label :domain %><%= mark_required(@subgroup, :domain) %><br />
		<%= f.text_field :domain %>
	</p>
	<p>
		<%= f.label :identifier, 'LDAP object name' %><%= mark_required(@subgroup, :identifier) %><br />
		<%= f.text_field :identifier %>
	</p>
	<p>
		<%= f.label :notes, t(:displays_edit_comment) %><%= mark_required(@subgroup, :notes) %><br />
		<%= f.text_area :notes %>
	</p>
	<p>
		<%= f.label :timezone, t(:user_edit_timezone) %>:<br />
		<%= f.time_zone_select(:timezone, nil, :default => current_group.timezone) %>
	</p>

<% end %>

